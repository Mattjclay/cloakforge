{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{- $categories := slice -}}
    {{- if .Params.category -}}
        {{- $categories = $categories | append .Params.category -}}
    {{- else if .Params.categories -}}
        {{- $categories = .Params.categories -}}
    {{- end -}}
    {{- $.Scratch.Add "index" (dict "title" .Title "href" .Permalink "tags" .Params.tags "categories" $categories "section" .Section "summary" (.Summary | plainify) "content" (.Content | plainify)) -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}
